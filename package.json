{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev --turbopack\" \"bun run watch-posts\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "posts": "bun run scripts/posts.ts",
    "watch-posts": "nodemon -e mdx -w src/app/posts --ignore src/app/posts/posts.json -x \"bun run scripts/posts.ts\""
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.2.3",
    "@types/mdx": "^2.0.13",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "next": "15.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-tweet": "^3.2.2",
    "sugar-high": "^0.9.3",
    "time-ago": "^0.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.2.3",
    "nodemon": "^3.1.9",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}